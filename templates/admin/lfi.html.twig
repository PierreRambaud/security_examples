{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  {% if finder is not empty %}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Filename</th>
          <th scope="col">Download</th>
        </tr>
      </thead>
      <tbody>
        {% for file in finder %}
          <tr>
            <th scope="row">{{ loop.index }}</th>
            <td>{{file.filename}}</td>
            <td>
              <a href={{ path('security_examples_lfi_download', {file: file.relativePathName}) }}>Download</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}
{% endblock %}
